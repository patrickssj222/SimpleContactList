{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"module": "es2020",
		"moduleResolution": "node",
		"rootDir": "source",
		"lib": ["es2020", "dom"],
		"sourceMap": true,
		"skipLibCheck": true,
		"target": "es2020",
		"types": [
			"jest",
			"long",
			"node",
			"react-native-svg",
			"reselect"
		],
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		],
		"esModuleInterop": true,
		"isolatedModules": false,
		"noEmit": true,
		"strict": true
	},
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	]
}
